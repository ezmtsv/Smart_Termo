<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ml"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical">
    <!--   android:background="@drawable/termo_fon" -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/ml_bar"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginRight="1dp"
            android:layout_marginTop="1dp" />
    </LinearLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/fon_air"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginRight="1dp"
            android:layout_marginTop="1dp" />
        <ImageView
            android:id="@+id/fon_watter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginRight="1dp"
            android:layout_marginTop="1dp" />
        <ImageView
            android:id="@+id/fon_out"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginRight="1dp"
            android:layout_marginTop="1dp" />
        <ImageView
            android:id="@+id/fon_boiler"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginRight="1dp"
            android:layout_marginTop="1dp" />
        <TextView
            android:id="@+id/tmp1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="20dp"
            android:text="   ..."
            android:textColor="#C5FDFE"
            android:textStyle="bold" />
        <!--android:text="   ..." -->
        <TextView
            android:id="@+id/tmp2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:text="   ..."
            android:textColor="#C5FDFE"
            android:textStyle="bold" />
        <!--android:text="   ..." -->
        <TextView
            android:id="@+id/tmp3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:text="   ..."
            android:textColor="#C5FDFE"
            android:textStyle="bold" />
        <!--android:text="   ..."-->
        <TextView
            android:id="@+id/tmp4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:text="   ..."
            android:textColor="#C5FDFE"
            android:textStyle="bold" />
        <!--android:text="   ..."-->
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/lay_tmpset"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tmpset"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:text=" ..."
            android:textColor="#C5FDFE"
            android:textSize="28sp"
            android:textStyle="bold" />
        <ImageView
            android:id="@+id/fon_progress_img"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:src="@drawable/fon_progress" />

        <ImageView
            android:id="@+id/progress_img"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:src="@drawable/progress" />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/lay_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/radio_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:buttonTint="@color/default_"
            android:onClick="onClick"
            />

        <TextView
            android:id="@+id/mode_heart_color"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:onClick="onClick"
            android:text="Учитывать дневной и ночной тариф"
            android:textColor="#C5FDFE"
            android:textSize="15sp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/status_mode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_gravity="center_horizontal"
            android:text="НАГРЕВ ВКЛЮЧЁН"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#ff0000"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/txt_gist_B"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:onClick="onClick"
            android:text="гистерезис .."
            android:textColor="#C5FDFE"
            android:textSize="15sp"
            android:textStyle="bold" />
    </RelativeLayout>
    <!--..................˚C-->
    <!--..................-->
    <RelativeLayout
        android:id="@+id/lay_stat_soscet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/ip_adr"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textColor="#C5FDFE"
            android:hint="IP adress server"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <TextView
            android:id="@+id/status_txt"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="5dp"
            android:text="STATUS SOCKET"
            android:textColor="#C5FDFE"
            android:textAppearance="?android:attr/textAppearanceMedium" />
        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="5dp"
            android:visibility="gone" />
        <TextView
            android:id="@+id/txt_gas_el"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text ="Нагреватель Электро"
            android:textColor="#C5FDFE"
            android:textSize="18sp"/>
        <ImageView
            android:id="@+id/but_stat_img"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:src="@drawable/but_stat" />
    </RelativeLayout>
    <!--
    <Button
        android:id="@+id/button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="Button" />
-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/lay_stat"
        android:orientation="vertical">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <RelativeLayout
                android:id="@+id/lay_scroll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txt_dev"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_weight="1"
                    android:gravity="top"
                    android:hint="Статистика работы"
                    android:textColor="#C5FDFE"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/butback_stat_img"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:src="@drawable/but_stat" />
            </RelativeLayout>
        </ScrollView>
    </LinearLayout>
</LinearLayout>
